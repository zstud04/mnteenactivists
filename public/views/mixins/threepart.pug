mixin three-part(header, components)
    section(class="flex small-center:flex-col mt-[3em] text-blue-50")
        h1 #{header}
        each component in components 
            section(class="bg-near-black rounded-lg block w-[100%]")
                h1(class="text-white text-[4em] headertext") #{component.header}
                
